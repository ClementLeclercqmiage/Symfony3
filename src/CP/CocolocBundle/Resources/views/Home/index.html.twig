{%extends '@CPCocoloc/Annonce/base.html.twig'%}


{%block title%}
	{{'Annonces'|trans}} 
{%endblock%}


 {%block body%}
 <div class="container">
    		<div class="row">
    			<h3>{{ 'Liste des annonces'|trans}} </h3>
    		</div>
			<div class="row">
			
				<table class="table table-striped table-bordered">
		              <thead>
		                <tr>
		                  <th>{{'Titre'|trans}}</th>
		                  <th>{{'Date'|trans}}</th>
		                  <th>{{'Categorie'|trans}}</th>
		                  <th>{{'Ville'|trans}}</th>
		                  <th>{{'Nombre de places'|trans}}</th>
		                  <th>{{'Prix'|trans}}</th>

		                </tr>
		              </thead>
		              <tbody>
		            {%for a in Annonce%}
					<tr>
						<td> {{a.titre}}</td>
						<td> {{a.datePublication|date}}</td>
						<td> {{a.categorie}}</td>
						<td> {{a.ville}}</td>
						<td> {{a.nbPlace}}</td>
						<td> {{a.prix}}</td>

						<td width=250>
							<a class="btn btn-success" href={{ path('show',{'id': a.id})}}>
							{{'Voir'|trans}}
							</a>&nbsp;
						</td>
					</tr>
					{%endfor%}
					
					
					</tbody>
	            </table>
	            <div class="text-center">{{ knp_pagination_render(Annonce) }}</div>

	            <p>
					<a href={{ path('addAnnonce')}} class="btn btn-success">{{ 'Ajouter'|trans}}</a>
				</p>
				

 {%endblock%}